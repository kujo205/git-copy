{
  "name": "git-remote-copy",
  "version": "1.0.0",
  "description": "A utility command to copy any folders or files of any public github/gitlab/bitbucket repo to selected path, without copying the whole repo",
  "files": ["!lib/__tests__/**/*", "lib/**/*", "bin/**/*"],
  "bin": {
    "git-remote-copy": "./bin/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "npx @biomejs/biome format --write ./src",
    "start": "TS_NODE_FILES=true ts-node ./src/cli.ts",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kujo205/gitcopy.git"
  },
  "license": "MIT",
  "author": {
    "name": "Ivan Kuts",
    "email": "kuc8301@gmail.com",
    "url": "https://github.com/kujo205"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "boilerplate",
    "cli",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "commitizen",
    "semantic-release",
    "codecov"
  ],
  "bugs": {
    "url": "https://github.com/kujo205/gitcopy/issues"
  },
  "homepage": "https://github.com/kujo205/gitcopy#readme",
  "dependencies": {
    "commander": "^7.2.0",
    "node-fetch": "^3.3.2",
    "chalk": "^4.1.2",
    "sqlite3": "^5.1.7",
    "tar": "^7.4.3",
    "tar-stream": "^3.1.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/jest": "^27.5.2",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^12.20.11",
    "@types/tar-stream": "^3.1.3",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "execa": "^5.1.1",
    "husky": "^6.0.0",
    "jest": "29.7.0",
    "lint-staged": "^13.2.1",
    "semantic-release": "^21.0.1",
    "ts-jest": "29.3.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.ts": "npx @biomejs/biome format --write ./src"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "hotfix/*",
        "prerelease": false
      },
      {
        "name": "release/*",
        "prerelease": false
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "revert",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            },
            {
              "type": "ci",
              "release": "patch"
            },
            {
              "scope": "hotfix",
              "release": "patch"
            },
            {
              "scope": "patch",
              "release": "patch"
            },
            {
              "breaking": true,
              "release": "major"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "üöÄ Features"
              },
              {
                "type": "fix",
                "section": "üêõ Bug Fixes"
              },
              {
                "type": "perf",
                "section": "‚ö° Performance Improvements"
              },
              {
                "type": "revert",
                "section": "‚è™ Reverts"
              },
              {
                "type": "docs",
                "section": "üìö Documentation"
              },
              {
                "type": "style",
                "section": "üíé Styles"
              },
              {
                "type": "refactor",
                "section": "üì¶ Code Refactoring"
              },
              {
                "type": "test",
                "section": "üö® Tests"
              },
              {
                "type": "build",
                "section": "üõ† Build System"
              },
              {
                "type": "ci",
                "section": "‚öôÔ∏è Continuous Integration"
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
