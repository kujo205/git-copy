{
	"name": "git-remote-copy",
	"version": "0.0.0-development",
	"description": "A utility command to copy any folders or files of any public github/gitlab/bitbucket repo to selected path, without copying the whole repo",
	"files": ["!lib/__tests__/**/*", "lib/**/*", "bin/**/*"],
	"bin": {
		"git-remote-copy": "./bin/index.js"
	},
	"scripts": {
		"build": "tsc",
		"clean": "rm -rf ./lib/",
		"cm": "cz",
		"lint": "npx @biomejs/biome format --write ./src",
		"start": "TS_NODE_FILES=true ts-node ./src/cli.ts",
		"prepare": "husky install",
		"semantic-release": "semantic-release",
		"test:watch": "jest --watch",
		"test": "jest",
		"typecheck": "tsc --noEmit"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kujo205/gitcopy.git"
	},
	"license": "MIT",
	"author": {
		"name": "Ivan Kuts",
		"email": "kuc8301@gmail.com",
		"url": "https://github.com/kujo205"
	},
	"engines": {
		"node": ">=12.0"
	},
	"keywords": [
		"boilerplate",
		"cli",
		"template",
		"typescript",
		"vscode",
		"jest",
		"husky",
		"commitizen",
		"semantic-release",
		"codecov"
	],
	"bugs": {
		"url": "https://github.com/kujo205/gitcopy/issues"
	},
	"homepage": "https://github.com/kujo205/gitcopy#readme",
	"dependencies": {
		"commander": "^7.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@ryansonshine/cz-conventional-changelog": "^3.3.4",
		"@types/jest": "^27.5.2",
		"@types/node": "^12.20.11",
		"chalk": "^4.1.1",
		"conventional-changelog-conventionalcommits": "^5.0.0",
		"execa": "^5.1.1",
		"husky": "^6.0.0",
		"jest": "^27.2.0",
		"lint-staged": "^13.2.1",
		"semantic-release": "^21.0.1",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.2.1",
		"typescript": "^4.2.4"
	},
	"lint-staged": {
		"*.ts": "npx @biomejs/biome format --write ./src"
	},
	"release": {
		"branches": ["main"],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"preset": "conventionalcommits",
					"releaseRules": [
						{
							"type": "build",
							"scope": "deps",
							"release": "patch"
						}
					]
				}
			],
			[
				"@semantic-release/release-notes-generator",
				{
					"preset": "conventionalcommits",
					"presetConfig": {
						"types": [
							{
								"type": "feat",
								"section": "Features"
							},
							{
								"type": "fix",
								"section": "Bug Fixes"
							},
							{
								"type": "build",
								"section": "Dependencies and Other Build Updates",
								"hidden": false
							}
						]
					}
				}
			],
			"@semantic-release/npm",
			"@semantic-release/github"
		]
	}
}
